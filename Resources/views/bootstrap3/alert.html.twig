{% macro success(text) %}
    <div class="alert alert-success">
        {{ text }}
    </div>
{% endmacro %}

{% macro info(text) %}
    <div class="alert alert-info">
        {{ text }}
    </div>
{% endmacro %}

{% macro errors(errors) %}
    {% if errors|length > 0 %}
    <div class="alert alert-danger">
        <ul class="form-type-errors list-unstyled">
            {% for error in errors %}
                <li>
                    <p class="text-danger">
                        {{ error.message|trans(error.messageParameters) }}
                    </p>
                </li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
{% endmacro %}

{% macro error(text) %}
    <div class="alert alert-danger">
        {{ text }}
    </div>
{% endmacro %}

{% macro warning(text) %}
    <div class="alert alert-warning">
        {{ text }}
    </div>
{% endmacro %}

