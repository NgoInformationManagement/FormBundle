{% use 'form_div_layout.html.twig' %}

{# Form label #}
{% block form_label %}
    {% set label_attr = label_attr | merge({'class' : 'col-lg-2 control-label'}) %}
    {{ parent() }}
{% endblock form_label %}

{# Form widget #}
{% block form_widget_simple %}
    {% set attr = attr | merge({'class' : 'form-control'}) %}
    {{ parent() }}
{% endblock form_widget_simple %}

{# Textarea widget #}
{% block textarea_widget %}
    {% set attr = attr | merge({'class' : 'form-control'}) %}
    {{ parent() }}
{% endblock textarea_widget %}

{# Choice widget #}
{% block choice_widget %}
    {% set attr = attr | merge({'class' : 'form-control'}) %}
    {{ parent() }}
{% endblock choice_widget %}

{# Form row #}
{% block form_row %}
    {% spaceless %}
        <div class="form-group {% if errors|length %}has-error{% endif %}">
            {{ form_label(form) }}
            <div class="col-lg-10">
                {{ form_widget(form) }}
                {{ form_errors(form) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock form_row %}

{# Form error #}
{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <ul class="form-type-errors list-unstyled">
                {% for error in errors %}
                    <li>
                        <p class="text-danger">
                            {{ error.message }}
                        </p>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{# Collection widget #}
{% block collection_widget %}
    {% spaceless %}
        {% set attr = attr|merge({'class': 'controls'}) %}

        <div data-form-type="collection"
             {{ block('widget_container_attributes') }}
             {% if prototype is defined %}data-prototype="<div data-form-collection='item'>{{ form_rest(prototype) | e }}</div>"{% endif %}>

            {% if prototype is defined %}
                <button href="#"
                   class="btn"
                   data-form-collection="add">
                    <i class="icon-plus"></i>
                    {{ 'form.collection.add' | trans }}
                </button>
            {% endif %}

            <div data-form-collection="list">
            {% for child in form %}
                <div data-form-collection="item">
                    {{ form_widget(child) }}
                    <button class="btn btn-danger"
                            data-form-collection="delete">
                        <i class="icon-trash"></i>
                        {{ 'form.collection.delete' | trans }}
                    </button>
                </div>
            {% endfor %}
             </div>
        </div>
    {% endspaceless %}
{% endblock collection_widget %}

{# Delete button widget #}
{% block delete_widget %}
    {% spaceless %}
        {% if label is empty %}
            {% set label = name|humanize %}
        {% endif %}
        <button type="{{ type|default('button') }}" {{ block('button_attributes') }}>
            <i class="icon-trash"></i>
            {{ label|trans({}, translation_domain) }}
        </button>
    {% endspaceless %}
{% endblock delete_widget %}