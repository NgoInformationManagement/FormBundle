{% use 'form_div_layout.html.twig' %}

{# Form label #}
{% block form_label %}
    {% set label_attr = label_attr | merge({'class' : 'col-lg-2 control-label'}) %}
    {{ parent() }}
{% endblock form_label %}

{# Form widget #}
{% block form_widget_simple %}
    {% set attr = attr | merge({'class' : 'form-control'}) %}
    {{ parent() }}
{% endblock form_widget_simple %}

{# Textarea widget #}
{% block textarea_widget %}
    {% set attr = attr | merge({'class' : 'form-control'}) %}
    {{ parent() }}
{% endblock textarea_widget %}

{# Choice widget #}
{% block choice_widget %}
    {% set attr = attr | merge({'class' : 'form-control'}) %}
    {{ parent() }}
{% endblock choice_widget %}

{# Form row #}
{% block form_row %}
    {% spaceless %}
        <div class="form-group {% if errors|length %}has-error{% endif %}">
            {{ form_label(form) }}
            <div class="col-lg-10">
                {{ form_widget(form) }}
                {{ form_errors(form) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock form_row %}

{# Form error #}
{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <ul class="form-type-errors list-unstyled">
                {% for error in errors %}
                    <li>
                        <p class="text-danger">
                            {{ error.message|trans(error.messageParameters) }}
                        </p>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{# Collection widget #}
{% block collection_widget %}
    {% spaceless %}
        {% set attr = attr|merge({'class': 'controls'}) %}
        {% set boxWidth = (12 / item_by_line)|number_format %}

        <div data-form-type="collection"
             {{ block('widget_container_attributes') }}
             {% if prototype is defined %}
             data-prototype='{{ _self.collectionItem(prototype, item_by_line, allow_delete)|e }}'
             {% endif %}>

            {% if prototype is defined and allow_add %}
            <div>
                <button class="btn btn-success"
                        data-form-collection="add">
                    <i class="icon-plus"></i>
                    {{ 'form.collection.add' | trans }}
                </button>
            </div>
            {% endif %}

            <div data-form-collection="list"
                 class="row collection-list">
            {% for child in form %}
                {{ _self.collectionItem(child, item_by_line, allow_delete) }}
            {% endfor %}

             </div>
        </div>
    {% endspaceless %}
{% endblock collection_widget %}

{% macro collectionItem(form, item_by_line, allow_delete) %}
    {% set boxWidth = (12 / item_by_line)|number_format %}

    <div data-form-collection="item"
         class="col-md-{{ boxWidth }} collection-item">
        <div class="collection-box">
            {% if allow_delete %}
                <i class="icon-remove collection-button-remove"
                   data-form-collection="delete"></i>
            {% endif %}

            {{ form_rest(form) }}
        </div>
    </div>
{% endmacro %}

{# Delete button widget #}
{% block delete_widget %}
    {% spaceless %}
        {% if label is empty %}
            {% set label = name|humanize %}
        {% endif %}
        <button type="{{ type|default('button') }}" {{ block('button_attributes') }}>
            <i class="icon-trash"></i>
            {{ label|trans({}, translation_domain) }}
        </button>
    {% endspaceless %}
{% endblock delete_widget %}