{% macro displayedField(field, value, entityName, labelWidth) %}
    {% set entityName = entityName|default('nim') %}
    {% set labelWidth = labelWidth|default(2) %}
    <div class="form-group">
        <label class="col-lg-{{ labelWidth }} control-label">{{ (entityName ~ '.field.' ~ field ~ '.label')|trans }}</label>
        <div class="col-lg-{{ 12 - labelWidth }}">
            <p class="form-control-static">{{ value|raw }}</p>
        </div>
    </div>
{% endmacro %}

{% macro displayedContantTranslatableField(field, value, entityName, labelWidth) %}
    {% set entityName = entityName|default('nim') %}
    {% set labelWidth = labelWidth|default(2) %}
    <div class="form-group">
        <label class="col-lg-{{ labelWidth }} control-label">{{ (entityName ~ '.field.' ~ field ~ '.label')|trans }}</label>
        <div class="col-lg-{{ 12 - labelWidth }}">
            <p class="form-control-static">{{ (entityName ~ '.field.' ~ field ~ '.option.' ~ value)|trans }}</p>
        </div>
    </div>
{% endmacro %}

{% macro translatableContant(entityName, field, value) %}
    {{ (entityName ~ '.field.' ~ field ~ '.option.' ~ value)|trans }}
{% endmacro %}

{% macro boolean(bool, successUrl, errorUrl) %}
    {% set successUrl = successUrl|default('#') %}
    {% set errorUrl = errorUrl|default('#') %}

    {% if bool %}
        <a href="{{ successUrl }}" class="btn btn-success">
            <i class="icon-ok"></i>
        </a>
    {% else %}
        <a href="{{ errorUrl }}" class="btn btn-danger">
            <i class="icon-minus-sign"></i>
        </a>
    {% endif %}
{% endmacro %}

{% macro date(date, default) %}
    {% set default = default|default('-') %}

    {% if date %}
        {{ date|localizeddate('long', 'none') }}
    {% else %}
        {{ default }}
    {% endif %}
{% endmacro %}