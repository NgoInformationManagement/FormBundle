{% macro displayedField(field, value, entityName, labelWidth) %}
    {% set entityName = entityName|default('nim') %}
    {% set labelWidth = labelWidth|default(2) %}
    <div class="form-group">
        <label class="col-lg-{{ labelWidth }} control-label">{{ (entityName ~ '.field.' ~ field ~ '.label')|trans }}</label>
        <div class="col-lg-{{ 12 - labelWidth }}">
            <p class="form-control-static">{{ value|raw }}</p>
        </div>
    </div>
{% endmacro %}

{% macro displayedContantTranslatableField(field, value, entityName, labelWidth) %}
    {% set entityName = entityName|default('nim') %}
    {% set labelWidth = labelWidth|default(2) %}
    <div class="form-group">
        <label class="col-lg-{{ labelWidth }} control-label">{{ (entityName ~ '.field.' ~ field ~ '.label')|trans }}</label>
        <div class="col-lg-{{ 12 - labelWidth }}">
            <p class="form-control-static">{{ (entityName ~ '.field.' ~ field ~ '.option.' ~ value)|trans }}</p>
        </div>
    </div>
{% endmacro %}