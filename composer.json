{
    "name": "nim/form-bundle",
    "type": "symfony-bundle",
    "description": "Nim form bundle : Manage your symfony form simpler",
    "keywords": ["nim", "ngo", "humanitarian", "form", "select2", "datepicker"],
    "homepage": "https://github.com/NgoInformationManagement/FormBundle",
    "license": "MIT",

    "authors": [
        {
            "name": "aRn0D",
            "homepage": "https://github.com/aRn0D"
        }
    ],

    "minimum-stability": "dev",

    "extra": {
        "branch-alias": {
            "dev-master": "0.1.0-dev"
        }
    },

    "target-dir": "NIM/FormBundle",

    "require": {
        "php": ">=5.4",
        "symfony/framework-bundle": "~2.3"
    },

    "require-dev": {
        "phpspec/phpspec": "2.0.*@dev",
        "symfony/form": "~2.3",
        "twig/twig": "1.15.*@dev"
    },

    "config": {
        "bin-dir": "bin"
    },

    "autoload": {
        "psr-0": {
            "NIM\\FormBundle": ""
        }
    }
}